# @description Run the test suite
test: build
    cargo test

# @emoji âœ…
# @description Run clippy linter and format checker
check:
    cargo clippy -- -D warnings
    cargo fmt -- --check

# @emoji ğŸ§¹
# @description Clean build artifacts
clean:
    cargo clean

# @emoji ğŸ“¦
# @description Build optimized release binary
